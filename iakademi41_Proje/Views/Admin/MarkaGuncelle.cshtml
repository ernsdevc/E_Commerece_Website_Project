@using iakademi41_Proje.Models
@model vw_markalar

@{
    ViewBag.Title = "MarkaGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    IEnumerable<SelectListItem> cs = ViewData["suplist"] as IEnumerable<SelectListItem>;
}

<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box blue ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Marka Güncelleme Formu
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        @using (Html.BeginForm("MarkaGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
        {
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Marka Adı</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" placeholder="Marka Adı Giriniz" name="BrandName" required maxlength="44" value="@Model.BrandName">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Resim</label>
                <div class="col-md-9">
                    <input type="file" class="form-control input-lg" placeholder="Resim Seçiniz" name="fileuploader">

                    <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
                </div>
            </div>
            <div class="form-actions right1">
                <button type="submit" class="btn green">Kaydet</button>
            </div>
        }
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
