                        <div class="fullwidthbanner-container">
                            <div class="home-1">
                                <ul>
                                    @foreach (var item in Model.slider_urunler)
                                    {
                                        <li data-transition="random" data-slotamount="7" data-masterspeed="1000">
                                         <img src="~/Content/resimler/@item.PhotoPath" alt="" />
                                            <div class="tp-caption large_black sfr carousel-caption-inner" data-x="150" data-y="10" data-speed="1100" data-start="1100" data-easing="easeInOutBack"
                                                 style="color:orangered; font-size:38px; letter-spacing: 1px; text-transform: uppercase;">
                                                @item.Price
                                            </div>
                                            <div class="tp-caption large_black sfr carousel-caption-inner" data-x="5" data-y="44" data-speed="1100" data-start="1400" data-easing="easeInOutBack"
                                                 style="font-size: 60px; font-style: italic; font-weight: normal; color: orangered; font-weight: bold; ">
                                                @item.ProductName
                                            </div>
                                            <div class="tp-caption lfb carousel-caption-inner" data-x="130" data-y="160" data-speed="1300" data-start="1700" data-easing="easeInOutBack"
                                                 style="">
                                                <a href="/Home/Sepet/@item.ProductID" class="s-btn" style="background: transparent; color: #fff; background-color: orangered; border: 1px solid #fff; font-weight: 700; font-size: 12px; display: inline-block; padding: 10px 18px; margin-left: 100px; text-transform: uppercase; ">Satın Al</a>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- END HOME SLIDER -->
                </div>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 ">
                <div class="single-special-products">
                    <h3 class="sp-module-title"><span>Günün Ürünü</span></h3>
                    <div class="all-sp-slides">
                        <!-- SP-SINGLE Product -->
                        <div class="sp-single">
                            <div class="sp-img-area">
                                <a href="/Home/Detaylar/@Model.gunun_urunu.ProductID">
                                    <img class="first-img" src="~/Content/resimler/@Model.gunun_urunu.PhotoPath" alt="" style="width:270px; height:200px;" />
                                    <img class="hover-img" src="~/Content/resimler/@Model.gunun_urunu.PhotoPath" alt="" style="width:270px; height:200px;" />
                                </a>
                                <div class="quick-view-detail">
