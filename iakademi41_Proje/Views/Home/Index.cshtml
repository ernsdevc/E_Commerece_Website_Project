                                <div class="product-rating">
                                    <div class="ratingbox" title="" Rating="3/5">
                                        <div style="width:65px" class="stars-orange"></div>
                                    </div>
                                </div>
                                <p class="all-prices">
                                    <span class="sp-price main-price">@Model.gunun_urunu.Price TL</span>
                                </p>
                                <div class="sp-button">
                                    <div class="s-button">
                                        <a href="/Home/Sepet/@Model.gunun_urunu.ProductID" data-toggle="tooltip" data-placement="top" title="Sepete Ekle" class="black-tooltip add-to-cart all_src_icon"> <i class="fa fa-shopping-cart"></i> </a>
